<li class="comment even thread-even depth-1" id="li-comment-<%= comment.id %>">
  <div id="comment-<%= comment.id %>" class="comment-wrap clearfix">
    <div class="comment-meta">
      <div class="comment-author vcard">
        <span class="comment-avatar clearfix">
          <%= image_tag comment.user.avatar, alt: "avatar.jpg",
            class: "avatar avatar-60 photo avatar-default" %>
        </span>
      </div>
    </div>
    <div class="comment-content clearfix">
      <div class="comment-author">
        <%= link_to comment.user.name, comment.user %>
        <span><%= comment.created_at %></span>
      </div>
      <p><%= comment.content %></p>

      <% if comment.user.current_user? current_user %>
        <%= link_to comment, class: "comment-reply-link delete delete-reply",
          method: :delete, data: {confirm: t("are_u_sure")},
          remote: true do %>
          <i class="icon-asterisk"></i>
        <% end %>

        <%= link_to "#", class: "comment-reply-link edit", remote: true do %>
          <i class="icon-wrench"></i>
        <% end %>
      <% end %>
    </div>
    <div class="clear"></div>
  </div>
</li>
