<% if user_signed_in? %>
  <div id="follow_form-<%= user.id %>">
    <% unless user.current_user? current_user %>
      <% if current_user.following? user %>
        <%= render "unfollow", user: user %>
      <% else %>
        <%= render "follow", user: user %>
      <% end %>
    <% end %>
  </div>
<% end %>
