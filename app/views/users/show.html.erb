<% provide :title, t("application.profile") %>
<% provide :name, t("application.profile") %>

<section id="content">
  <div class="content-wrap">
    <div class="container clearfix">
      <div class="row clearfix">
        <div class="clear"></div>
        <div class="col-md-12">
          <div class="heading-block noborder">
            <%= image_tag @user.avatar, alt: "avatar.jpg", class: "img-circle
            img-thumbnail notopmargin nobottommargin profile-pic left" %>
            <div class="bio left">
              <h3 class="user-name"><%= @user.name %></h3>
              <%= render "follow_form", user: @user %>
            </div>
          </div>
          <p><%= @user.bio %></p>

          <div class="row clearfix">
            <div class="col-lg-12">
              <div class="tabs tabs-alt clearfix" id="tabs-profile">

                <ul class="tab-nav clearfix">
                  <li>
                    <%= link_to "#tab-posts" do %>
                      <i class="icon-pencil2"></i>
                      <%= t ".post" %>
                      <strong id="followers-count-<%= @user.id %>">
                        (<%= @user.posts.count %>)
                      </strong>
                    <% end %>
                  </li>

                  <li>
                    <%= link_to "#tab-following" do %>
                      <i class="icon-users"></i>
                      <%= t "relationships.following" %>
                      <strong id="follwing-count-<%= @user.id %>">
                        (<%= @user.following.count %>)
                      </strong>
                    <% end %>
                  </li>

                  <li>
                    <%= link_to "#tab-followers" do %>
                      <i class="icon-users"></i>
                      <%= t "relationships.followers" %>
                      <strong id="followers-count-<%= @user.id %>">
                        (<%= @user.followers.count %>)
                      </strong>
                    <% end %>
                  </li>
                </ul>

                <div class="tab-container">

                  <div class="tab-content clearfix" id="tab-posts">
                    <div class="col-md-8">
                      <% if @posts.present? %>
                        <%= render @posts %>
                      <% end %>
                    </div>
                  </div>

                  <div class="tab-content clearfix" id="tab-following">
                    <%= render "following" %>
                  </div>

                  <div class="tab-content clearfix" id="tab-followers">
                    <%= render "followers" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="w-100 line d-block d-md-none"></div>

      </div>
    </div>
  </div>
</section>

<div id="gotoTop" class="icon-angle-up"></div>
