<% provide :title, t("application.profile") %>
<% provide :name, t("application.profile") %>

<section id="content">
  <div class="content-wrap">
    <div class="container clearfix">
      <div class="row clearfix">
        <div class="clear"></div>
        <div class="col-md-9">
          <div class="heading-block noborder">
            <%= image_tag "avatar.jpg", class: "img-circle img-thumbnail
              notopmargin nobottommargin profile-pic" %>
            <div class="bio">
              <h3 class="user-name"><%= @user.name %></h3>
              <%= render "follow_form", user: @user %>
            </div>
          </div>

          <div class="row clearfix">
            <div class="col-lg-12">
              <div class="tabs tabs-alt clearfix" id="tabs-profile">

                <ul class="tab-nav clearfix">
                  <li>
                    <%= link_to "#tab-feeds" do %>
                      <i class="icon-rss2"></i>
                      <%= t ".feed" %>
                    <% end %>
                  </li>

                  <li>
                    <%= link_to "#tab-posts" do %>
                      <i class="icon-pencil2"></i>
                      <%= t ".post" %>
                    <% end %>
                  </li>

                  <li>
                    <%= link_to "#tab-following" do %>
                      <i class="icon-users"></i>
                      <%= t "relationships.following" %>
                      <strong id="follwing-count-<%= @user.id %>">
                        (<%= @user.following.count %>)
                      </strong>
                    <% end %>
                  </li>

                  <li>
                    <%= link_to "#tab-followers" do %>
                      <i class="icon-users"></i>
                      <%= t "relationships.followers" %>
                      <strong id="followers-count-<%= @user.id %>">
                        (<%= @user.followers.count %>)
                      </strong>
                    <% end %>
                  </li>
                </ul>

                <div class="tab-container">
                  <div class="tab-content clearfix" id="tab-feeds">
                  </div>

                  <div class="tab-content clearfix" id="tab-posts">
                    <div class="col-md-8">
                      <% if @user.posts.any? %>
                        <h3>(<%= @user.posts.count %>)</h3>
                        <ol class="posts">
                          <%= render @posts %>
                        </ol>
                      <% end %>
                    </div>
                  </div>

                  <div class="tab-content clearfix" id="tab-following">
                    <%= render "following" %>
                  </div>

                  <div class="tab-content clearfix" id="tab-followers">
                    <%= render "followers" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="w-100 line d-block d-md-none"></div>

        <div class="col-md-3 clearfix">
          <div class="list-group">
            <%= link_to "#", class: "list-group-item list-group-item-action
              clearfix" do %>
              <%= t "application.profile" %>
              <i class="icon-user float-right"></i>
            <% end %>

            <%= link_to "#", class: "list-group-item list-group-item-action
              clearfix" do %>
              <%= t "application.message" %>
              <i class="icon-mail float-right"></i>
            <% end %>

            <% if logged_in? %>
              <%= link_to edit_user_path(current_user),
                class: "list-group-item list-group-item-action clearfix" do %>

                <%= t "application.setting" %>
                <i class="icon-cog float-right"></i>
              <% end %>
            <% end %>

            <%= link_to logout_path, method: :delete,
              class: "list-group-item list-group-item-action clearfix" do %>

              <%= t "application.logout" %>
              <i class="icon-line2-logout float-right"></i>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<div id="gotoTop" class="icon-angle-up"></div>
