<section id="page-title">
  <div class="container clearfix">
    <h1><%= t "application.profile" %></h1>
  </div>
</section>

<section id="content">
  <div class="content-wrap">
    <div class="container clearfix">
      <div class="row clearfix">
        <div class="col-md-9">
          <!--          <img src="" class="alignleft img-circle img-thumbnail notopmargin nobottommargin" alt="Avatar" style="max-width: 84px;">-->
          <div class="heading-block noborder">
            <h3><%= @user.name %></h3>
          </div>
          <div class="clear"></div>
          <div class="row clearfix">
            <div class="col-lg-12">
              <div class="tabs tabs-alt clearfix" id="tabs-profile">

                <ul class="tab-nav clearfix">
                  <li>
                    <%= link_to "#tab-feeds" do %>
                      <i class="icon-rss2"></i>
                      <%= t ".feed" %>
                    <% end %>
                  </li>

                  <li>
                    <%= link_to "#tab-posts" do %>
                      <i class="icon-pencil2"></i>
                      <%= t ".post" %>
                    <% end %>
                  </li>

                  <li>
                    <%= link_to "#tab-replies" do %>
                      <i class="icon-reply"></i>
                      <%= t ".reply" %>
                    <% end %>
                  </li>

                  <li>
                    <%= link_to "#tab-connections" do %>
                      <i class="icon-users"></i>
                      <%= t ".connection" %>
                    <% end %>
                  </li>
                </ul>

                <div class="tab-container">
                  <div class="tab-content clearfix" id="tab-feeds">
                  </div>

                  <div class="tab-content clearfix" id="tab-posts">
                  </div>

                  <div class="tab-content clearfix" id="tab-replies">
                  </div>

                  <div class="tab-content clearfix" id="tab-connections">
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="w-100 line d-block d-md-none"></div>

        <div class="col-md-3 clearfix">
          <div class="list-group">
            <%= link_to "#", class: "list-group-item list-group-item-action clearfix" do %>
              <%= t "application.profile" %>
              <i class="icon-user float-right"></i>
            <% end %>

            <%= link_to "#", class: "list-group-item list-group-item-action clearfix" do %>
              <%= t "application.message" %>
              <i class="icon-mail float-right"></i>
            <% end %>

            <%= link_to "#", class: "list-group-item list-group-item-action clearfix" do %>
              <%= t "application.setting" %>
              <i class="icon-cog float-right"></i>
            <% end %>

            <%= link_to "#", class: "list-group-item list-group-item-action clearfix" do %>
              <%= t "application.logout" %>
              <i class="icon-line2-logout float-right"></i>
            <% end %>
          </div>

          <div class="fancy-title topmargin title-border">
            <h4> <%= t ".bio" %></h4>
          </div>
          <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ipsum
            laboriosam, dignissimos veniam obcaecati. Quasi eaque, odio
            assumenda porro explicabo laborum!</p>
        </div>
      </div>
    </div>
  </div>
</section>

<div id="gotoTop" class="icon-angle-up"></div>
