<%= form_for :session, url: login_path do |f| %>
  <%= render "shared/error_messages" %>
  <div class="col_full">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="col_full">
    <%= f.label :password, t("activerecord.models.user.password") %>
    <%= f.password_field :password %>
  </div>
  <div class="col_full nobottommargin">
    <%= f.submit t(".login_now"), class: "button button-3d button-black nomargin" %>
  </div><br>
  <%= f.label :remember_me, class: "radio-small" do %>
    <%= f.check_box :remember_me, class: "radio-style", type: "radio"%>
    <%= t "remember_me" %>
  <% end %>
  <%= link_to t(".forgot_pass"), new_password_reset_path, class: "fright" %>
<% end %>
